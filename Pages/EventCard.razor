@using System.ComponentModel.DataAnnotations
@code {
    public class EventModel {
        [Required(ErrorMessage = "Event name is required.")]
        public string Name { get; set; }

        [Required(ErrorMessage = "Date is required.")]
        [DataType(DataType.Date)]
        public DateTime Date { get; set; }

        [Required(ErrorMessage = "Location is required.")]
        public string Location { get; set; }
    }

    private EventModel sampleEvent = new EventModel {
        Name = "Annual Business Summit",
        Date = new DateTime(2025, 10, 15),
        Location = "Hanoi, Vietnam"
    };
}

<EditForm Model="@sampleEvent">
    <DataAnnotationsValidator />
    <div class="event-card">
        <h2>@sampleEvent.Name</h2>
        <p>Date: @sampleEvent.Date.ToString("MMMM dd, yyyy")</p>
        <p>Location: @sampleEvent.Location</p>
    </div>
</EditForm>
<ValidationSummary />
